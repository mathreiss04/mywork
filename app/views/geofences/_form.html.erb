<% @geofence.errors.full_messages.each do |msg| %>
	<div class = "alert alert-danger" role = "alert">
		<%= msg %>
	</div>
<% end %>

<%= form_for @geofence do |form| %>
	<div class = "row">
		<div class = "col-sm-2">
			<div class = "form-group">
				<%= form.label :latitude %>
				<%= form.text_field :latitude, class:"form-control" %>
			</div>
		</div>
	</div>

	<div class = "row">
		<div class = "col-sm-2">
			<div class = "form-group">
				<%= form.label :longitude %>
				<%= form.text_field :longitude, class:"form-control" %>
			</div>
		</div>
	</div>

	<div class = "row">
		<div class = "col-sm-2">
			<div class = "form-group">
				<%= form.label :radius %>
				<%= form.text_field :radius, class:"form-control" %>
			</div>
		</div>
	</div>
	<%= form.submit "Save", class:"btn btn-primary" %>
<% end %>